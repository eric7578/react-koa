extends layout

block content
    .row
        .col
        form.form-horizontal(method="post", action="/auth/login")
            .form-group
                label.col-sm-2.control-label(for="username") Account
                .col-sm-10
                    input#username.form-control(type="text", name="username", placeholder="John Doe")
            .form-group
                label.col-sm-2.control-label(for="password") Password
                .col-sm-10
                    input#password.form-control(type="password", name="password")
            .form-group
                .col-sm-offset-2.col-sm-10
                    input.btn.btn-primary(type="submit", value="Login")
